<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/body"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/OutputText"
        style="@style/tv_output"
        android:text="0" />

    <LinearLayout style="@style/ll_linear" >

        <Button
            style="@style/btn_operand"
            android:text="7" />

        <Button
            style="@style/btn_operand"
            android:text="8" />

        <Button
            style="@style/btn_operand"
            android:text="9" />

        <Button
            style="@style/btn_operate"
            android:text="/" />
    </LinearLayout>

    <LinearLayout style="@style/ll_linear" >

        <Button
            style="@style/btn_operand"
            android:text="4" />

        <Button
            style="@style/btn_operand"
            android:text="5" />

        <Button
            style="@style/btn_operand"
            android:text="6" />

        <Button
            style="@style/btn_operate"
            android:text="*" />
    </LinearLayout>

    <LinearLayout style="@style/ll_linear" >

        <Button
            style="@style/btn_operand"
            android:text="1" />

        <Button
            style="@style/btn_operand"
            android:text="2" />

        <Button
            style="@style/btn_operand"
            android:text="3" />

        <Button
            style="@style/btn_operate"
            android:text="-" />
    </LinearLayout>

    <LinearLayout style="@style/ll_linear" >

        <Button
            style="@style/btn_operand"
            android:text="0" />

        <Button
            style="@style/btn_operate"
            android:text="c" />

        <Button
            style="@style/btn_operate"
            android:text="=" />

        <Button
            style="@style/btn_operate"
            android:text="+" />
    </LinearLayout>

</LinearLayout>